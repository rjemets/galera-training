[mysqld]
innodb_buffer_pool_size=200M
innodb_log_file_size=100M
innodb_flush_log_at_trx_commit=0
max_connections=1024
innodb_file_per_table
server_id={{galera_server_id}}
performance_schema=0
binlog_format=ROW
default-storage-engine=innodb
innodb_autoinc_lock_mode=2
query_cache_size=0
query_cache_type=0
bind-address=0.0.0.0

slow_query_log=1
long_query_time=3
max_heap_table_size=32M
tmp_table_size=32M
innodb_autoextend_increment=512
innodb_status_file
innodb_lock_wait_timeout=5
innodb_flush_method=O_DIRECT
innodb_adaptive_flushing=1
innodb_stats_on_metadata=0
wait_timeout=900
log_warnings=2

[galera]
wsrep_provider=/usr/lib64/galera/libgalera_smm.so
wsrep_cluster_name="{{galera_cluster_name}}"
wsrep_node_name={{galera_node_name}}
wsrep_cluster_address="{{galera_cluster_address}}"
wsrep_node_address={{galera_node_address}}
wsrep_slave_threads=1
wsrep_sst_method=xtrabackup-v2
wsrep_sst_receive_address={{galera_node_address}}
wsrep_sst_auth=galera:{{galera_sst_password}}

